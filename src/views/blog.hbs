
      <section class="blog-header">
        <h1 class="blog-title">Blog</h1>
        <ul>
          <li><a href="/">Home</a></li>
          &bull;
          <li><a href="/blog" class="active">Blog</a></li>
        </ul>
      </section>

      <section class="blog-content">
        <div class="container blog-container">
          <div class="blog-content-list">
            {{#each blogs}}
            <div class="blog-content-item">
              <img
                src="{{image}}"
                alt="{{title}}"
              />
              <div class="blog-content-item-info">
                <h2 class="blog-title-text">
                  {{title}}
                </h2>
                <p class="blog-description"> {{description}} </p>
                <div class="blog-info">
                  <div class="blog-info-item">
                    <ion-icon name="person-outline"></ion-icon>
                    <span> {{author}} </span>
                  </div>
                  <div class="blog-info-item">
                    <ion-icon name="calendar-outline"></ion-icon>
                    <span> {{date}} </span>
                  </div>
                  <div class="blog-info-item">
                    <ion-icon name="chatbubble-outline"></ion-icon>
                    <span>Comments</span>
                  </div>
                  <a href="/blog-details.html" class="btn btn-blog">Read more..</a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          <div class="blog-info-list">
            <form action="">
              <input type="text" placeholder="Search..." class="search-input" />
              <button type="submit" class="search-btn">
                <ion-icon name="search-outline"></ion-icon>
              </button>
            </form>
            <div class="blog-info-item">
              <h3 class="blog-info-title">Categories</h3>
              <ul class="blog-info-list-item">
                <li><a href="#">Adventure</a></li>
                <li><a href="#">Travel</a></li>
                <li><a href="#">Lifestyle</a></li>
                <li><a href="#">Food</a></li>
                <li><a href="#">Culture</a></li>
              </ul>
            </div>
            <div class="blog-info-item">
              <h3 class="blog-info-title">Recent Posts</h3>
              <ul class="blog-info-list-item">
                <li><a href="#">Exploring the Hidden Gems of Istanbul</a></li>
                <li><a href="#">A Culinary Journey Through Turkey</a></li>
                <li><a href="#">The Best Hiking Trails in Cappadocia</a></li>
                <li>
                  <a href="#">Discovering the Ancient Ruins of Ephesus</a>
                </li>
                <li><a href="#">A Guide to Turkish Cuisine</a></li>
              </ul>
            </div>

            <div class="tags">
              <h3 class="blog-info-title">Tags</h3>
              <ul class="tags-list">
                <li><a href="#">Food</a></li>
                <li><a href="#">Fresh</a></li>
                <li><a href="#">Organic</a></li>
                <li><a href="#">Vegetable</a></li>
                <li><a href="#">Harvest</a></li>
              </ul>
            </div>

            <div class="advertisment">
              <div class="advartisment-content">
                <h3 class="blog-info-title">Advertisment</h3>
                <p class="advertisment-text">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit.
                  Repudiandae, cumque.
                </p>
                <button class="btn btn-advs">Go there</button>
              </div>
              <img
                src="/static/blog-images/advs-image.jpg"
                alt=""
                class="advertisment-img"
              />
            </div>

            <div class="newsletter">
              <h3 class="blog-info-title">Newsletter</h3>
              <p class="newsletter-text">
                Subscribe to our newsletter and get the latest updates. 
                <br />
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
              </p>
              <form action="">
                <input
                  type="email"
                  placeholder="Enter your email"
                  class="newsletter-input"
                />
                <button type="submit" class="btn btn-newsletter">Subscribe</button>
            </div>
          </div>
        </div>
      </section>

        <!-- SUBSCRIPTION -->
       <section class="section section-subscription">
        <div class="container subscribe-container">

          <div class="subscription-box">
            <h3 class="heading-3 subscribe-heading">Get our pro offers</h3>
            <p class="sub-text">Create a virtual for your company, and an overall branding tht stands out.</p>
          </div>
          <form class="subscribe-form" action="" method="post">
            <input type="email" name="subcribe" value="" placeholder="Enter your email" class="subscribe-input" />
            <button class="btn subscribe-btn" type="">Subscribe</button>
          </form>
        </div>
       </section>

 